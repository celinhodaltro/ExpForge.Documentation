@page "/Docs/Commands/Generate-Documentation/"

<MudContainer MaxWidth="MaxWidth.Large" Class="pa-6">


    <!-- Card do comando -->
    <MudPaper Elevation="3" Class="pa-6">

        <!-- Título do widget -->
        <MudText Typo="Typo.h6" Class="mb-1">Command Title</MudText>
        <MudChip Text="blue" Color="Color.Info" Value="@Color.Info">New-Widget</MudChip>



        <!-- Descrição -->
        <MudText Typo="Typo.h6" Class="mb-1">Description</MudText>
        <MudTextField T="string"
                      Value="@("Create Widget")"
                      Disabled="true"
                      Lines="4"
                      Variant="Variant.Outlined"
                      Class="mb-4"
                      Style="white-space: pre-line;" /> 


        <!-- Parâmetros -->
        
<MudText Typo="Typo.h6" Class="mt-3 mb-2" Align="Align.Center">Parameters:</MudText>

<table class="custom-table" style="width:100%; border-collapse: collapse; font-family: Arial, sans-serif; font-size:14px; text-align:center;">
    <thead>
        <tr style="background-color:#1976d2; color:white;">
            <th style="padding:10px; border-bottom:2px solid #115293;">Name</th>
            <th style="padding:10px; border-bottom:2px solid #115293;">Type</th>
            <th style="padding:10px; border-bottom:2px solid #115293;">Description</th>
        </tr>
    </thead>
    <tbody>
        
        <tr style="background-color:#f5f5f5; border-bottom:1px solid #e0e0e0;">
            <td style="padding:8px; text-align:center;">WidgetName</td>
            <td style="padding:8px; text-align:center;">String</td>
            <td style="padding:8px; text-align:center;">Widget name (optional, will prompt if not provided)</td>
        </tr>

        <tr style="background-color:white; border-bottom:1px solid #e0e0e0;">
            <td style="padding:8px; text-align:center;">TemplateName</td>
            <td style="padding:8px; text-align:center;">String</td>
            <td style="padding:8px; text-align:center;">Template name (optional, will prompt if not provided)</td>
        </tr>
    </tbody>
</table>

    </MudPaper>
</MudContainer>


<style>
    .custom-table {
        width: 100%;
        border-collapse: collapse;
        font-family: "Roboto", sans-serif;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }

        .custom-table thead {
            background-color: #1976d2; /* azul MudBlazor */
            color: white;
            text-align: left;
        }

        .custom-table th, .custom-table td {
            padding: 12px 15px;
            border-bottom: 1px solid #e0e0e0;
        }

        .custom-table tbody tr:nth-child(even) {
            background-color: #f5f5f5;
        }

        .custom-table tbody tr:hover {
            background-color: #e3f2fd; /* efeito hover leve */
        }

        .custom-table th {
            font-weight: 500;
        }

        .custom-table td {
            vertical-align: top;
        }
</style>