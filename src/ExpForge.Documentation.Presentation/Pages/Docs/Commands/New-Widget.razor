@using MudBlazor
@using System.Collections.Generic

<MudContainer MaxWidth="MaxWidth.Large" Class="pa-4">
    <MudText Typo="Typo.h4" Align="Align.Center">
        New-Widget - CLI Command Documentation
    </MudText>
    <MudDivider Class="my-4" />

    <MudText Typo="Typo.subtitle2" Color="Color.Secondary">
        Author: Your Organization/Name
    </MudText>
    <MudText Typo="Typo.subtitle2" Color="Color.Secondary">
        Date: 2025-10-08
    </MudText>

    <MudPaper Elevation="3" Class="pa-4 mt-4">
        <MudText Typo="Typo.h6">Command Title:</MudText>
        <MudText Typo="Typo.body1">New-Widget</MudText>

        <MudText Typo="Typo.h6" Class="mt-3">Description:</MudText>
        <MudText Typo="Typo.body2">
            Create Widget
        </MudText>

        
          <MudText Typo="Typo.h6" Class="mt-3">Parameters:</MudText>
          
          <MudTable Dense="true" Hover="true">
              <HeaderContent>
                  <MudTh>Name</MudTh>
                  <MudTh>Type</MudTh>
                  <MudTh>Description</MudTh>
              </HeaderContent>
              <RowTemplate> 
                  
                  <MudTr>
                    <MudTd>WidgetName</MudTd>
                    <MudTd>String</MudTd>
                    <MudTd>Widget name (optional, will prompt if not provided)</MudTd>
                  </MudTr>

                  <MudTr>
                    <MudTd>TemplateName</MudTd>
                    <MudTd>String</MudTd>
                    <MudTd>Template name (optional, will prompt if not provided)</MudTd>
                  </MudTr>
              </RowTemplate>
          </MudTable>

    </MudPaper>
</MudContainer>
