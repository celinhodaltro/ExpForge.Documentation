@page "/"
@using MudBlazor
@inject NavigationManager Navigation

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-12">

    <MudPaper Elevation="6" Class="pa-10 text-center main-section" Outlined="true">

        <MudText Typo="Typo.h2" Class="mb-3 font-cinzel main-title" Color="Color.Primary">
            <MudImage Src="img/icon.png" Height="100" Width="100"></MudImage> ExpForge</MudText>
        <MudText Typo="Typo.h6" Class="mb-6 main-subtitle" Color="Color.Primary">
            A powerful tool to quickly generate, version, and automate .NET and GIS templates.
        </MudText>
        <MudButton Variant="Variant.Filled" Color="Color.Secondary" Size="Size.Large"
                   OnClick="@(() => Navigation.NavigateTo("/Docs/getting-started"))">
            GET STARTED
        </MudButton>
    </MudPaper>

    <MudGrid Spacing="4" Class="my-10">
        <MudItem xs="12" sm="6" md="3">
            <MudCard Elevation="0" Class="pa-6 feature-card">
                <div class="feature-card-icon-bg"></div>
                <MudIcon Icon="@Icons.Material.Filled.AutoAwesome" Color="Color.Primary" Style="font-size: 36px;" />
                <MudText Typo="Typo.h6" Color="Color.Primary" Class="mt-3 mb-2">Template Generation</MudText>
                <MudText Color="Color.Secondary" Style="line-height: 1.6;">
                    Create components, widgets, and workflows with a single CLI command. Fast and simple.
                </MudText>
            </MudCard>
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudCard Elevation="0" Class="pa-6 feature-card">
                <div class="feature-card-icon-bg"></div>
                <MudIcon Icon="@Icons.Material.Filled.History" Color="Color.Primary" Style="font-size: 36px;" />
                <MudText Typo="Typo.h6" Color="Color.Primary" Class="mt-3 mb-2">Smart Versioning</MudText>
                <MudText Color="Color.Secondary" Style="line-height: 1.6;">
                    Keep your templates organized by version, ensuring continuous evolution and compatibility.
                </MudText>
            </MudCard>
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudCard Elevation="0" Class="pa-6 feature-card">
                <div class="feature-card-icon-bg"></div>
                <MudIcon Icon="@Icons.Material.Filled.Public" Color="Color.Primary" Style="font-size: 36px;" />
                <MudText Typo="Typo.h6" Color="Color.Primary" Class="mt-3 mb-2">Open Source</MudText>
                <MudText Color="Color.Secondary" Style="line-height: 1.6;">
                    Built by developers, for developers. Fully open-source, transparent, and community-driven.
                </MudText>
            </MudCard>
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudCard Elevation="0" Class="pa-6 feature-card">
                <div class="feature-card-icon-bg"></div>
                <MudIcon Icon="@Icons.Material.Filled.Devices" Color="Color.Primary" Style="font-size: 36px;" />
                <MudText Typo="Typo.h6" Color="Color.Primary" Class="mt-3 mb-2">Cross-Platform</MudText>
                <MudText Color="Color.Secondary" Style="line-height: 1.6;">
                    Build and deploy templates seamlessly across Windows, Linux, and macOS environments.
                </MudText>
            </MudCard>
        </MudItem>
    </MudGrid>
</MudContainer>





<style>
    .font-cinzel {
        font-family: 'Cinzel', serif !important;
        color: white
    }

    .main-section {
        background: rgba(255, 255, 255, 0.1); /* vidro semi-transparente */
        backdrop-filter: blur(15px); /* desfoque para efeito fosco */
        -webkit-backdrop-filter: blur(15px);
        border: 1px solid rgba(255, 255, 255, 0.2); /* borda leve para contorno */
        border-radius: 24px;
        color: #E4E4E4;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.25); /* sombra suave */
        transition: transform 0.3s ease, box-shadow 0.3s ease, border-color 0.3s ease;
    }
    .main-title {
        font-weight: 700;
    }

    .main-subtitle {
        max-width: 600px;
        margin: 0 auto;
        line-height: 1.6;
    }

    .feature-card {
        position: relative;
        overflow: hidden;
        height: 100%;
        min-height: 50px;
        display: flex;
        flex-direction: column;
        align-items: center; /* Centraliza horizontalmente */
        justify-content: center; /* Centraliza verticalmente */
        text-align: center; /* Centraliza o texto */
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(15px);
        -webkit-backdrop-filter: blur(15px);
        border-radius: 16px;
        border: 1px solid rgba(255, 255, 255, 0.2);
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.25);
        transition: transform 0.3s ease, box-shadow 0.3s ease, border-color 0.3s ease;
    }

        .feature-card:hover {
            transform: translateY(-8px) scale(1.02);
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.4);
            border-color: rgba(255, 255, 255, 0.3);
        }


        .feature-card .feature-card-icon-bg {
            content: '';
            position: absolute;
            top: 16px;
            right: 16px;
            width: 64px;
            height: 64px;
            background-size: contain;
            opacity: 0.05;
            transition: opacity 0.3s ease;
        }

        .feature-card:hover .feature-card-icon-bg {
            opacity: 0.1;
        }

    .install-section {
        background-color: #1F2833;
        border-radius: 16px;
        border: 1px solid rgba(102, 252, 241, 0.1);
        color: #E4E4E4;
    }
    .main-content {
        background-color: #0B0C10;
        color: #E4E4E4;
    }

</style>